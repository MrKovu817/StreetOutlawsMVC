@model IEnumerable<CarListItem>

@{
    ViewData["Title"]="Car Listing";
}

@Html.ActionLink("Create Car","Post","Car")

@if(Model.Count()>0)
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Make</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Make</td>
                <td>
                    @Html.ActionLink("Update","Update","Car",new {id=car.Id})
                    @Html.ActionLink("Details","Details","Car",new {id=car.Id})
                    @Html.ActionLink("Delete","Delete","Car",new {id=car.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">Sorry, NO Cars Here!</p>
}