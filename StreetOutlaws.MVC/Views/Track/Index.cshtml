@model IEnumerable<TrackListItem>

@{
    ViewData["Title"]="Track Listing";
}

@Html.ActionLink("Create Track","Post","Track")

@if(Model.Count()>0)
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var track in Model)
        {
            <tr>
                <td>@track.Id</td>
                <td>@track.Name</td>
                <td>
                    @Html.ActionLink("Update","Update","Track",new {id=track.Id})
                    @Html.ActionLink("Details","Details","Track",new {id=track.Id})
                    @Html.ActionLink("Delete","Delete","Track",new {id=track.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">Sorry, NO Tracks Here!</p>
}