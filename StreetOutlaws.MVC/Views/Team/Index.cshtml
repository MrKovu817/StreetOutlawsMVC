@model IEnumerable<TeamListItem>

@{
    ViewData["Title"]="Team Listing";
}

@Html.ActionLink("Create Team","Post","Team")

@if(Model.Count()>0)
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                    @Html.ActionLink("Update","Update","Team",new {id=team.Id})
                    @Html.ActionLink("Details","Details","Team",new {id=team.Id})
                    @Html.ActionLink("Delete","Delete","Team",new {id=team.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">Sorry, NO Teams Here!</p>
}